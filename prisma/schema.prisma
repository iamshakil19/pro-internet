generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      String
  image     String?
  phone     String
  password  String
  access    Boolean? @default(true)
  createdAt DateTime @default(now())

  @@map("users")
}

model Package {
  id             String   @id @default(uuid())
  name           String
  price          Int
  renewsFee      Int
  storage        String
  bandwidth      String
  website        String
  cpu            String
  physicalMemory String
  process        String
  desc           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("packages")
}
